<Window x:Class="WpfApplication3_ardim.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication3_ardim"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="lbStatus" HorizontalAlignment="Left" Height="51" Margin="200,119,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="100"/>
        <Button x:Name="btConnect" Content="Button" HorizontalAlignment="Left" Margin="110,55,0,0" VerticalAlignment="Top" Width="85" Click="btConnect_Click" Height="30"/>
        <Slider x:Name="tbBrightness" HorizontalAlignment="Left" Margin="50,205,0,0" VerticalAlignment="Top" Height="23" Width="390" ValueChanged="tbBrightness_ValueChanged" Minimum="0" Maximum="255"/>
        <Button x:Name="btDisconnect" Content="Button" HorizontalAlignment="Left" Margin="300,55,0,0" VerticalAlignment="Top" Width="85" Click="btDisconnect_Click" Height="30"/>

    </Grid>
</Window>
